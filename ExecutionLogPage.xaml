<Page x:Class="jpmc_genai.ExecutionLogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Background="#0F1419"
      Title="Execution Log"
      Loaded="Page_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar matching the dashboard theme -->
        <Border Background="#1A1E27" Grid.Column="0" BorderBrush="#00D4FF" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Background="#00D4FF" Padding="15,20,15,20">
                    <TextBlock Text="jpmcAI" Foreground="#0F1419" FontSize="18" FontWeight="Bold" TextAlignment="Center" />
                </Border>
                
                <!-- Navigation buttons -->
                <StackPanel Grid.Row="1" Margin="12,25,12,0">
                    <Button Content="â† Back to Dashboard" 
                            Click="BackToDashboard_Click" 
                            Style="{StaticResource SidebarButtonStyle}" 
                            Margin="0,0,0,12" />
                    <Button Content="â–¶ AI Test Executor" 
                            Click="AITestExecutor_Click"
                            Style="{StaticResource SidebarButtonStyle}" 
                            Margin="0,0,0,8" />
                    <Button Content="âš™ Script Generator" 
                            Click="ScriptGenerator_Click" 
                            Style="{StaticResource SidebarButtonStyle}" 
                            Margin="0,0,0,8" />
                    <Button Content="ðŸ“‹ Execution Log" 
                            IsEnabled="False"
                            Style="{StaticResource SidebarButtonStyle}" 
                            Margin="0,0,0,8" />
                    <Button Content="ðŸ“¤ Upload Test Case" 
                            Click="UploadTestCase_Click" 
                            Style="{StaticResource SidebarButtonStyle}" 
                            Margin="0,0,0,8" />
                </StackPanel>
                
                <!-- Project info card at bottom -->
                <Border Grid.Row="2" Margin="12,0,12,15" CornerRadius="8" Background="#252B33" BorderBrush="#333333" BorderThickness="1,1,1,1">
                    <StackPanel Margin="15,15,15,15">
                        <TextBlock Text="Current Project" Foreground="#00D4FF" FontSize="12" FontWeight="Bold" Margin="0,0,0,10" />
                        <TextBlock x:Name="ProjectTitleTextBlock" Foreground="White" FontSize="14" FontWeight="SemiBold" TextWrapping="Wrap" Margin="0,0,0,8" />
                        <TextBlock x:Name="ProjectDetailsTextBlock" Foreground="#A0A8B0" FontSize="10" TextWrapping="Wrap" LineHeight="16" Margin="0,0,0,12" />
                        <Button Content="Change Project" Style="{StaticResource SidebarButtonStyle}" Click="ChangeProject_Click" Height="32" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="#1A1E27" Padding="25,20" BorderBrush="#333333" BorderThickness="0,0,0,1">
                <StackPanel>
                    <TextBlock Text="Execution History" 
                               Foreground="White" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Margin="0,0,0,3" />
                    <TextBlock Text="View all test execution logs and generate scripts" 
                               Foreground="#A0A8B0" 
                               FontSize="12" 
                               Margin="0,0,0,0" />
                </StackPanel>
            </Border>
            
            <!-- Execution Log Table -->
            <Grid Grid.Row="1" Background="#0F1419">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <!-- DataGrid for execution logs -->
                <DataGrid Grid.Row="0"
                          x:Name="ExecutionLogDataGrid"
                          Background="#0F1419"
                          Foreground="White"
                          BorderBrush="#333333"
                          BorderThickness="0"
                          RowBackground="#1A1E27"
                          AlternatingRowBackground="#252B33"
                          HeadersVisibility="Column"
                          CanUserResizeRows="False"
                          CanUserSortColumns="True"
                          AutoGenerateColumns="False"
                          MouseDoubleClick="ExecutionLogDataGrid_DoubleClick"
                          Margin="25">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#1A1E27" />
                            <Setter Property="Foreground" Value="#00D4FF" />
                            <Setter Property="Padding" Value="8,6" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="BorderBrush" Value="#333333" />
                            <Setter Property="BorderThickness" Value="0,0,1,1" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Execution ID" Binding="{Binding exeid}" Width="100" />
                        <DataGridTextColumn Header="Test Case ID" Binding="{Binding testcaseid}" Width="120" />
                        <DataGridTextColumn Header="Date" Binding="{Binding datestamp}" Width="100" />
                        <DataGridTextColumn Header="Time" Binding="{Binding exetime}" Width="140" />
                        <DataGridTextColumn Header="Message" Binding="{Binding message}" Width="250" />
                        <DataGridTextColumn Header="Status" Binding="{Binding status}" Width="80" />
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Generate Script Button at bottom -->
                <Border Grid.Row="1" Background="#1A1E27" Padding="25,12" BorderBrush="#333333" BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   x:Name="SelectedExecutionInfo"
                                   Foreground="#A0A8B0" 
                                   FontSize="11" 
                                   VerticalAlignment="Center"
                                   Text="Select a row to generate script" />
                        
                        <Button Grid.Column="1"
                                x:Name="GenerateScriptButton"
                                Content="âš™ Generate Script"
                                Click="GenerateScript_Click"
                                Background="#00D4FF"
                                Foreground="#0F1419"
                                Padding="14,8"
                                FontSize="12"
                                FontWeight="Bold"
                                Cursor="Hand"
                                IsEnabled="False" />
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Status Bar -->
            <Border Grid.Row="2" Background="#1A1E27" Padding="25,12" BorderBrush="#333333" BorderThickness="0,1,0,0">
                <TextBlock x:Name="StatusTextBlock" Foreground="#A0A8B0" FontSize="10" Text="Ready" />
            </Border>
        </Grid>
    </Grid>
</Page>

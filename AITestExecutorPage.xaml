<Page x:Class="jpmc_genai.AITestExecutorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Background="#0F1419"
      Title="AI Test Executor">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- Redesigned sidebar to match dashboard theme: jpmcAI header, nav buttons, project info card at bottom -->
        <Border Background="#1A1E27" Grid.Column="0" BorderBrush="#00D4FF" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <!-- Header matching dashboard -->
                <Border Grid.Row="0" Background="#00D4FF" Padding="15,20,15,20">
                    <TextBlock Text="jpmcAI" Foreground="#0F1419" FontSize="18" FontWeight="Bold" TextAlignment="Center" />
                </Border>
                
                <!-- Navigation buttons -->
                <StackPanel Grid.Row="1" Margin="12,25,12,0">
                    <Button Content="â† Back to Dashboard" 
                            Click="BackToDashboard_Click" 
                            Style="{StaticResource SidebarButtonStyle}" 
                            Margin="0,0,0,12" />
                    <Button Content="â–¶ AI Test Executor" 
                            IsEnabled="False"
                            Style="{StaticResource SidebarButtonStyle}" 
                            Margin="0,0,0,8" />
                    <Button Content="âš™ Script Generator" 
                            Click="ScriptGenerator_Click" 
                            Style="{StaticResource SidebarButtonStyle}" 
                            Margin="0,0,0,8" />
                    <Button Content="ðŸ“‹ Execution Log" 
                            Click="ExecutionLog_Click" 
                            Style="{StaticResource SidebarButtonStyle}" 
                            Margin="0,0,0,8" />
                    <Button Content="ðŸ“¤ Upload Test Case" 
                            Click="UploadTestCase_Click" 
                            Style="{StaticResource SidebarButtonStyle}" 
                            Margin="0,0,0,8" />
                </StackPanel>
                
                <!-- Project info card moved to bottom only, matching dashboard style -->
                <Border Grid.Row="2" Margin="12,0,12,15" CornerRadius="8" Background="#252B33" BorderBrush="#333333" BorderThickness="1">
                    <StackPanel Margin="15">
                        <TextBlock Text="Current Project" Foreground="#00D4FF" FontSize="12" FontWeight="Bold" Margin="0,0,0,10" />
                        <TextBlock x:Name="ProjectTitleTextBlock" Foreground="White" FontSize="14" FontWeight="SemiBold" TextWrapping="Wrap" Margin="0,0,0,8" />
                        <TextBlock x:Name="ProjectDetailsTextBlock" Foreground="#A0A8B0" FontSize="10" TextWrapping="Wrap" LineHeight="16" Margin="0,0,0,12" />
                        <Button Content="Change Project" Style="{StaticResource SidebarButtonStyle}" Click="ChangeProject_Click" Height="32" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="280" />
            </Grid.RowDefinitions>
            
            <!-- Header section updated to match dashboard theme -->
            <Border Grid.Row="0" Background="#1A1E27" Padding="25,20" BorderBrush="#333333" BorderThickness="0,0,0,1">
                <StackPanel>
                    <TextBlock Text="Test Case Execution" 
                               Foreground="White" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Margin="0,0,0,3" />
                    <TextBlock Text="Select a test case, load its plan, and execute the generated script" 
                               Foreground="#A0A8B0" 
                               FontSize="12" 
                               Margin="0,0,0,15" />
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <ComboBox Grid.Column="0"
                                  x:Name="TestCaseComboBox" 
                                  Background="#252B33"
                                  Foreground="White"
                                  Height="36"
                                  FontSize="13"
                                  Padding="12,8"
                                  Margin="0,0,12,0"
                                  BorderBrush="#333333"
                                  BorderThickness="1" />
                        
                        <Button Grid.Column="1"
                                Content="Load Plan"
                                Click="LoadTestPlanButton_Click"
                                Background="#00D4FF"
                                Foreground="#0F1419"
                                Padding="14,8"
                                FontSize="12"
                                FontWeight="Bold"
                                Cursor="Hand" />
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Test Plan Display Section -->
            <Border Grid.Row="1" Background="#0F1419" BorderBrush="#333333" BorderThickness="0,1,0,1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    
                    <!-- Section Header -->
                    <Border Grid.Row="0" Background="#1A1E27" Padding="25,12" BorderBrush="#333333" BorderThickness="0,0,0,1">
                        <TextBlock Text="Test Plan (JSON)" 
                                   Foreground="White" 
                                   FontSize="12" 
                                   FontWeight="Bold" />
                    </Border>
                    
                    <!-- Test Plan JSON Display -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <TextBox x:Name="TestPlanJsonTextBox"
                                 IsReadOnly="False"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 Background="#0F1419"
                                 Foreground="#00D4FF"
                                 FontFamily="Courier New"
                                 FontSize="11"
                                 Padding="25"
                                 BorderThickness="0"
                                 Text="No test plan loaded. Select a test case and click 'Load Plan'" />
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Execution Log Section -->
            <Border Grid.Row="2" BorderBrush="#333333" BorderThickness="0,1,0,0" Background="#0F1419">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    
                    <!-- Execution Controls -->
                    <Border Grid.Row="0" Background="#1A1E27" Padding="25,12" BorderBrush="#333333" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                       Text="Execution Log" 
                                       Foreground="White" 
                                       FontSize="12" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center" />
                            
                            <Button Grid.Column="1" 
                                    x:Name="ExecuteButton"
                                    Content="â–¶ Execute" 
                                    Click="ExecuteButton_Click"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    Padding="12,6"
                                    Margin="10,0,10,0"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Cursor="Hand" />
                            
                            <Button Grid.Column="2" 
                                    Content="Clear" 
                                    Click="ClearExecutionLog_Click" 
                                    Background="#555555"
                                    Foreground="White"
                                    Padding="10,6" 
                                    FontSize="11"
                                    Cursor="Hand" />
                        </Grid>
                    </Border>
                    
                    <!-- Execution Log Display -->
                    <TextBox Grid.Row="1" 
                             x:Name="ExecutionLogTextBox" 
                             IsReadOnly="True" 
                             AcceptsReturn="True" 
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             Background="#0F1419"
                             Foreground="#4CAF50"
                             FontFamily="Courier New"
                             FontSize="10"
                             Padding="25"
                             BorderThickness="0"
                             Text="Ready to execute tests..." />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
